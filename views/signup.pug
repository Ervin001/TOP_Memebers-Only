extends layout 

block content 
   div.info-container
      h2 Sign Up 
      form.sign-up-form(action="", method="POST")
        label(for="username") Username
        input(name="username", placeholder="username", type="text")
        label(for="password") Password
        input(name="password", type="password")
        button(type="submit") Sign Up

        if errors 
          ul
            for error in errors 
              li= error.msg
