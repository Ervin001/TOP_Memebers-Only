extends layout 

block content 
   div.form-container.sign-up-container
      form.forms.sign-up-form(action="/log-in", method="POST")
        div.log-in-container
          h1 Please Log In
        div.user-name-container.input-container
          label(for="username") Username
          input(name="username", placeholder="Username", type="text")
        div.password-container.input-container
          label(for="password") Password
          input(name="password", type="password")
        div.btn-container
          button(type="submit") Log In
